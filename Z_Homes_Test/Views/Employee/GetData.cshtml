@model Z_Homes_Test.Models.EmployeeBusinessViewModel

<table class="table">
    @Html.ActionLink("New", "InsertData", "Employee")
    <thead>
        <tr>
            <th scope="col">Employee Id</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Department Name</th>
            <th scope="col">Basic Salary</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.employeeViewModels.Count > 0)
        {
            @foreach (var item in Model.employeeViewModels)
            {
                <tr>
                    <th scope="row">@item.EmployeeId</th>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.DepartmentName</td>
                    <td>@item.BasicSalary</td>
                    <td>
                        @Html.ActionLink("Update", "UpdateData", "Employee", new { Id = item.EmployeeId })
                        @Html.ActionLink("Delete", "DeleteData", "Employee", new { Id = item.EmployeeId })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>