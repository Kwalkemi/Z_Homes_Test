@{
}


@model Z_Homes_Test.Models.EmployeeViewModel

@using (Html.BeginForm("InsertData", "Employee", FormMethod.Post))
{
    <div class="row">
        <div class="col-4">
        </div>
        <div class="col">
            @Html.DisplayFor(x => x.EmployeeId, new { @class = "form-control", placeholder = "Employee Id" })
        </div>
        <div class="col-4">
        </div>
    </div>
    <div class="row">
        <div class="col-4">
        </div>

        <div class="col-4">
            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", placeholder = "First name" })
        </div>

        <div class="col-4">
        </div>
    </div>
    <div class="row">
        <div class="col-4">
        </div>
        <div class="col">
            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", placeholder = "Last name" })
        </div>
        <div class="col-4">
        </div>
    </div>

    <div class="row">
        <div class="col-4">
        </div>
        <div class="col">
            @Html.TextBoxFor(x => x.DepartmentName, new { @class = "form-control", placeholder = "Department name" })
        </div>
        <div class="col-4">
        </div>
    </div>

    <div class="row">
        <div class="col-4">
        </div>
        <div class="col">
            @Html.TextBoxFor(x => x.BasicSalary, new { @class = "form-control", placeholder = "Basic Salary" })
        </div>
        <div class="col-4">
        </div>
    </div>

    <div class="row">
        <div class="col-4">
        </div>
        <div class="col">
            HRA Component:  @Html.DisplayFor(x => x.HRAComponent, new { @class = "form-control", placeholder = "HRA Component" })
        </div>
        <div class="col-4">
        </div>
    </div>

    <div class="row">
        <div class="col-4">
        </div>
        <div class="col">
            TA Component:   @Html.DisplayFor(x => x.TAComponent, new { @class = "form-control", placeholder = "TA Component" })
        </div>
        <div class="col-4">
        </div>
    </div>

    <div class="row">
        <div class="col-4">
        </div>
        <div class="col">
            DA Component:  @Html.DisplayFor(x => x.DAComponent, new { @class = "form-control", placeholder = "DA Component" })
        </div>
        <div class="col-4">
        </div>
    </div>


    <div class="row">
        <div class="col-4">
        </div>
        <div class="col">
            <input type="submit" value="Insert" class="btn btn-secondary btn-lg" />
        </div>
        <div class="col-4">
        </div>
    </div>
}